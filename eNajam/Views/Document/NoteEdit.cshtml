@model eNajam.Models.NoteViewModel
@{
    ViewBag.Title = "Obavijesti";
}

@using (Html.BeginForm())
{
    <br />
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12">
            <div class="card clearfix">
                <div class="card-header">
                    <h2>Uređivanje</h2>
                </div>
                <div class="card-body">
                    <br />
                    <div class="form-row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.LabelFor(model => model.Naziv, htmlAttributes: new { @class = "form-label" })
                                    @Html.EditorFor(model => model.Naziv, new { htmlAttributes = new { Value = Model.Naziv, @class = "form-control", id = "naziv", name = "Naziv", autocomplete = "off" } })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group">
                                <div class="form-line">
                                    @Html.LabelFor(model => model.Opis, htmlAttributes: new { @class = "form-label" })
                                    @Html.EditorFor(model => model.Opis, new { htmlAttributes = new { Value = Model.Opis, @class = "form-control", id = "iznos", name = "Iznos", autocomplete = "off" } })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                            <div class="form-group form-float">
                                <div class="form-line">
                                    <label for="DatumDogadaja">Datum događaja</label>
                                    @Html.EditorFor(model => model.DatumDogadaja, new { htmlAttributes = new { Value = Model.DatumDogadaja, @class = "form-control", id = "datum", name = "DatumDogadaja", @data_provide = "datepicker", autocomplete = "off" } })
                                </div>
                            </div>
                        </div>
                    </div>
                    @Html.HiddenFor(m=> m.KorisnikId)
                    @Html.HiddenFor(m => m.NekretninaId)
                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="submit" value="Spremi promjene" class="btn btn-primary m-t-15 waves-effect" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#datum').datepicker({
                format: 'dd.mm.yyyy'
            });
        });
    </script>
}