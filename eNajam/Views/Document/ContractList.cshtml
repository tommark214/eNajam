@model IList<eNajam.Models.DocumentViewModel>
@{
    ViewBag.Title = "Contract list";
}
@using (Html.BeginForm())
{
    <br />
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("ContractCreate","Document")'">Novo</button>
        </div>
    </div>
    <br />

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">Naziv</th>
                <th scope="col">Najmodavac</th>                
                <th scope="col">Nekretnina</th>
                <th scope="col">Trajanje ugovora</th>
                <th scope="col">Datum isteka</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <td scope="row"><a href="@Url.Action("ContractEdit","Document", new { id = Model[i].Id })">@Model[i].Naziv</a></td>
                    <td>@Model[i].Najmodavac</td>                    
                    <td>@Model[i].Nekretnina</td>
                    <td>@Model[i].TrajanjeUgovora</td>
                    <td>@Model[i].DatumIsteka</td>
                </tr>
            }
        </tbody>
    </table>

}

