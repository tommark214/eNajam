@model IList<eNajam.Models.NoteViewModel>
@{
    ViewBag.Title = "UserList";
}
@using (Html.BeginForm())
{
    <br />
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("NoteCreate","Document")'">Novo</button>
        </div>
    </div>
    <br />

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">Naziv</th>
                <th scope="col">Opis</th>
                <th scope="col">Datum događaja</th>
                @if(Global.TIP_KORISNIKA == "NAJMODAVAC")
                {
                    <th scope="col">Nekretnina</th>
                }
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
            <tr>
                <td scope="row"><a href="@Url.Action("NoteEdit","Document", new { id = Model[i].Id })">@Model[i].Naziv</a></td>
                <td>@Model[i].Opis</td>
                <td>@Model[i].DatumDogadaja</td>
                @if (Global.TIP_KORISNIKA == "NAJMODAVAC")
                {
                    <td>@Model[i].Nekretnina</td>
                }
            </tr>
            }
        </tbody>
    </table>

}

